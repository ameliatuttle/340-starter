<% if (title) { %>
    <h1><%= title %></h1>
<% } else { %>
    <h1>Add Classification</h1>
<% } %>

<% if (flashMessage) { %>
    <div class="alert alert-success">
        <%= flashMessage %>
    </div>
<% } %>

<form id="add-classification-form" class="site-form" action="/inv/add-classification" method="POST" novalidate>
    <label for="classificationName">Classification Name:</label>
    <input 
        type="text" 
        id="classificationName" 
        name="classification_name" 
        required 
        pattern="^[a-zA-Z0-9]+$" 
        title="Classification name must not contain spaces or special characters." 
    />
    <button type="submit" class="register-button">Add Classification</button>
</form>